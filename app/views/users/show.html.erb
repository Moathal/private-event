<h1>The partyholic Miss/Mrs./Mr. <%= @user.fullname %></h1>
<h4><%= link_to 'Partyholics', users_path %></h4>
<h4><%= link_to 'Events', events_path %></h4>

<h2>Events created</h2>
<% @user.events.each do | event | %>
  <h4><%= event.location %></h4>
  <small><% event.date %></small>
<h4><%= link_to 'See Event', event_path(event.id) %></h4>
<% end %>

<h2>Events Attending</h2>
<h3>Comming up Events</h3>
<%= @user.attended_events.future_attending_events.each do | event | %>
  <h4><%= event.creator.fullname %></h4>
  <h4><%= event.location %></h4>
  <small><% event.date %></small>
  <h4><%= link_to 'See Event', event_path(event.id) %></h4>
<% end %>

<h3>Past Events</h3>
<%= @user.attended_events.past_attending_events.each do | event | %>
  <h4><%= event.creator.fullname %></h4>  
  <h4><%= event.location %></h4>
  <small><% event.date %></small>
  <h4><%= link_to 'See Event', event_path(event.id) %></h4>
<% end %>