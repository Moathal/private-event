<%= turbo_frame_tag 'page_content', class: "container", style: "align-self: center !important;" do %>
  <h2 class="mb-5 mt-1 text-muted">Edit <span> <%= @event.name %> </span> EVENT</h2>
  <%= form_for @event do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

    <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
    </div>

    <div>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>

    <%= f.submit "Submit", disable_with: 'Submiting...' %>
  <% end %>
<% end %>